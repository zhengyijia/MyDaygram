<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/list_text_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/colorGray"
        android:textSize="16sp"
        android:textStyle="normal"
        android:typeface="serif"
        android:text="10 "/>

    <TextView
        android:id="@+id/list_text_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/list_text_day"
        android:layout_toRightOf="@id/list_text_day"
        android:textColor="@color/colorGray"
        android:textSize="16sp"
        android:textStyle="normal"
        android:typeface="serif"
        android:text="MONDAY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/list_text_week"
        android:layout_toRightOf="@id/list_text_week"
        android:textColor="@color/colorGray"
        android:textSize="16sp"
        android:textStyle="normal"
        android:typeface="serif"
        android:text=" /"
        />

    <TextView
        android:id="@+id/list_text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/list_text_day"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/colorGray"
        android:textSize="14sp"
        android:textStyle="normal"
        android:typeface="sans"
        android:text="@string/example_text"/>

</RelativeLayout>
